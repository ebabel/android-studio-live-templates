<templateSet group="surround">
  <template name="P" value="($SELECTION$)" description="Surround with ()" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="CAst" value="(($CAST_TYPE$)$SELECTION$)" description="Surround with ((xxx) selection)" toReformat="false" toShortenFQNames="true">
    <variable name="CAST_TYPE" expression="" defaultValue="CPFActivity" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="false" />
      <option name="XML" value="false" />
      <option name="JAVA_CODE" value="false" />
      <option name="JAVA_STATEMENT" value="true" />
      <option name="JAVA_COMMENT" value="false" />
      <option name="JAVA_STRING" value="false" />
      <option name="COMPLETION" value="false" />
      <option name="GROOVY" value="false" />
      <option name="GROOVY_EXPRESSION" value="false" />
      <option name="OTHER" value="true" />
    </context>
  </template>
</templateSet>